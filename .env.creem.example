# Creem Payment Configuration Example
# Copy these variables to your .env.local or .env.production

# ========================================
# Creem API Configuration
# ========================================
# Get these from Creem Dashboard > Settings > API Keys
CREEM_API_KEY=your_creem_api_key_here
CREEM_WEBHOOK_SECRET=your_webhook_secret_here
CREEM_MERCHANT_ID=your_merchant_id_here

# Environment: "test" for testing, "prod" for production
CREEM_ENV=test

# ========================================
# Creem Product IDs Mapping
# ========================================
# Format: JSON object mapping your product IDs to Creem product IDs
# Example format: {"your_product_id":"creem_product_id"}
CREEM_PRODUCTS={
  "basic_monthly":"ai_generator_basic_monthly",
  "basic_yearly":"ai_generator_basic_yearly",
  "pro_monthly":"ai_generator_pro_monthly",
  "pro_yearly":"ai_generator_pro_yearly",
  "enterprise_monthly":"ai_generator_enterprise_monthly",
  "enterprise_yearly":"ai_generator_enterprise_yearly",
  "credits_100":"credits_pack_100",
  "credits_500":"credits_pack_500",
  "credits_2000":"credits_pack_2000"
}

# ========================================
# Individual Product IDs (Alternative)
# ========================================
# You can also use individual environment variables
CREEM_PRODUCT_BASIC_MONTHLY=ai_generator_basic_monthly
CREEM_PRODUCT_BASIC_YEARLY=ai_generator_basic_yearly
CREEM_PRODUCT_PRO_MONTHLY=ai_generator_pro_monthly
CREEM_PRODUCT_PRO_YEARLY=ai_generator_pro_yearly
CREEM_PRODUCT_ENTERPRISE_MONTHLY=ai_generator_enterprise_monthly
CREEM_PRODUCT_ENTERPRISE_YEARLY=ai_generator_enterprise_yearly

# Credit Packs
CREEM_CREDITS_100=credits_pack_100
CREEM_CREDITS_500=credits_pack_500
CREEM_CREDITS_2000=credits_pack_2000

# ========================================
# Callback URLs
# ========================================
# These are handled automatically in the code
# Success URL: /api/pay/callback/creem
# Webhook URL: /api/pay/notify/creem

# ========================================
# Test Mode Settings
# ========================================
# For testing, use these test credentials
# Test API Key: test_pk_xxxxxxxxxxxxx
# Test Webhook Secret: test_whsec_xxxxxxxxxxxxx

# Test card numbers:
# Success: 4242 4242 4242 4242
# Decline: 4000 0000 0000 0002
# Requires authentication: 4000 0025 0000 3155